<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RxJavaActivity">

    <Button
        android:id="@+id/start_new_activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动新的LifecycleActivity2的实例"/>

    <Button
        android:id="@+id/start_already_activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动已经存在的LifecycleActivity2的实例"/>
    <Button
        android:id="@+id/start_multitask_activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多任务栈启动LifecycleActivity2的实例"/>
</LinearLayout>